{% extends 'base.twig' %}

{% block title %}ثبت نام ترجمه رسمی آنلاین{% endblock %}

{% block scripts %}
<script type="text/javascript">
    $(document).ready(function() {
        $("#name").focus();
        window.addEventListener('load', function() {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    });
</script>
{% endblock %}


{% block content %}
<form class="needs-validation" style="margin-top: 100px;" method="post" action="register" novalidate>
    <div class="form-group row">
        <label  for="name" class="col-sm-2 col-form-label">نام کامل</label>
        <div class="col-sm-10">
            <input required name="name" type="text" class="form-control" id="name">
            <div class="invalid-feedback">
                لطفا نام کامل خود را وارد کنید
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">رایانامه</label>
        <div class="col-sm-10">
            <input required name="mail" type="text" class="form-control" id="staticEmail">
            <div class="invalid-feedback">
                لطفا رایانامه خود را وارد کنید
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">رمز</label>
        <div class="col-sm-10">
            <input required name="password" type="password" class="form-control" id="inputPassword">
            <div class="invalid-feedback">
                لطفا رمز خود را وارد کنید
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="phone" class="col-sm-2 col-form-label">موبایل</label>
        <div class="col-sm-10">
            <input required name="mobile" type="text" class="form-control" id="phone">
            <div class="invalid-feedback">
                لطفا شماره موبایل خود را وارد کنید
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary topButton">ثبت نام</button>
</form>
{% endblock %}