{% extends 'base.twig' %}

{% block title %}لیست قیمت ترجمه رسمی{% endblock %}
{% block scripts %}
    <script type="text/javascript">
        $(document).ready(function () {
        });

    </script>
{% endblock %}


{% block content %}

    <div class="container mainContainer" style="text-align: right;direction: rtl;">
        <h4 class="centerHeader">لیست قیمت ترجمه رسمی </h4>
        <br/>
        <table class="paleBlueRows" style="text-align:center;width: 80%;margin-right: auto;margin-left: auto;">
            <thead>
                <tr>
                    <th>نوع سند</th>
                    <th>ترجمه انگلیسی</th>
                    <th>ترجمه غیر انگلیسی</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td style="text-align: right;"><a href="{{ product.url }}">{{product.title }}</a></td>
                        <td>{{product.price }}</td>
                        <td>{{product.extra }}</td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
